    <%= form_for @schedule do |f| %>
      <table class="form">
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_date ,"開始日" %></th>
          <td><%= f.date_field :start_date  %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date ,"終了日" %></th>
          <td><%= f.date_field :end_date  %></td>
        </tr>

        <tr>
          <th><%= f.label :all_day_flg ,"終日" %></th>
          <td>
            <%= f.check_box :all_day_flg  %>
            <%= f.label :"終日の場合はチェックを入れます" %>
          </td>
          
        </tr>
        
        <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_area :memo ,rows: 5 %></td>
        </tr>
        
      </table>
    
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
      </div>
    <% end %>
      
    